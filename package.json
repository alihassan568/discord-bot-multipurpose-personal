{
    "name": "multipurpose-discord-bot",
    "version": "1.0.0",
    "description": "A comprehensive Discord bot with moderation, anti-nuke, tickets, music, and dashboard",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "deploy": "tsx src/scripts/deploy-commands.ts",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write src/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "db:migrate": "npx prisma migrate dev",
        "db:generate": "npx prisma generate",
        "db:studio": "npx prisma studio",
        "setup:dev": "./scripts/setup.sh dev",
        "setup:prod": "./scripts/setup.sh prod"
    },
    "keywords": [
        "discord",
        "bot",
        "moderation",
        "anti-nuke",
        "music",
        "tickets",
        "dashboard"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "discord.js": "^14.14.1",
        "@discordjs/rest": "^2.2.0",
        "@prisma/client": "^5.7.1",
        "redis": "^4.6.12",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "dotenv": "^16.3.1",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1",
        "bull": "^4.12.2",
        "sharp": "^0.33.1",
        "axios": "^1.6.2",
        "node-cron": "^3.0.3",
        "passport": "^0.7.0",
        "passport-discord": "^0.1.4",
        "express-session": "^1.17.3",
        "connect-redis": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "joi": "^17.12.0",
        "bcrypt": "^5.1.1",
        "jsonwebtoken": "^9.0.2",
        "ytdl-core": "^4.11.5",
        "@discordjs/voice": "^0.16.1",
        "play-dl": "^1.9.7",
        "libsodium-wrappers": "^0.7.11"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/bcrypt": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/jest": "^29.5.8",
        "@types/node-cron": "^3.0.11",
        "@types/passport": "^1.0.16",
        "@types/express-session": "^1.17.10",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.0.1",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "tsx": "^4.6.2",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "prisma": "^5.7.1"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}